{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "Path": "C:\\Users\\user\\Desktop\\YieldView\\Logging",
      "Append": true,
      "MaxFileSize": 10485760, // 10 MB max file size
      "MaxRollingFiles": 5 // keep last 5 files
    }
  },

  "AllowedHosts": "*",

  "YieldCurveSources": {
    "US": {
      "BaseUrl": "https://home.treasury.gov/resource-center/data-chart-center/interest-rates/pages/xmlview?data=daily_treasury_yield_curve&field_tdr_date_value",
      "Years": [ 2024, 2025 ], // load all the years
      "FetchInterval": "Hourly"
    },
    "SP500": {
      "BaseUrl": "https://stooq.com/q/d/l/?s=^spx&i=d",
      "Years": [ 2023, 2025 ],
      "FetchInterval": "Daily"
    },
    "Bidu": {
      "BaseUrl": "https://stooq.com/q/d/l/?s=bidu.us&i=d",
      "FetchInterval": "Daily"
    },
    "PLUG.US": {
      "BaseUrl": "https://stooq.com/q/d/l/?s=plug.us&i=d",
      "FetchInterval": "Daily"
    },
    "GDP": {
      "BaseUrl": "https://fred.stlouisfed.org/graph/fredgraph.csv?id=GDP",
      "FetchInterval": "Daily"
    },
    "Wilshire": {
      "BaseUrl": "https://query1.finance.yahoo.com/v8/finance/chart/%5EW5000?interval=1d&range=max",
      "FetchInterval": "Daily"
    }
  }
}
