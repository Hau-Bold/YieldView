{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "YieldCurveSources": {
    "US": {
      "BaseUrl": "https://home.treasury.gov/resource-center/data-chart-center/interest-rates/pages/xmlview?data=daily_treasury_yield_curve&field_tdr_date_value",
      "Years": [ 2024, 2025 ], // load all the years
      "FetchInterval" : "Hourly"
    },
    "DE": {
      "BaseUrl": "https://www.bundesbank.de/statistics/par-yield-csv-url.csv",
      "Years": [ 2020, 2025 ], // Start year and current year - we parse everything between
      "FetchInterval": "Hourly"
    },
    "SP500": {
      "BaseUrl": "https://stooq.com/q/d/l/?s=^spx&i=d",
      "Years": [ 2023, 2025 ],
      "FetchInterval": "Daily"
    },
    "Bidu": {
      "BaseUrl": "https://stooq.com/q/d/l/?s=bidu.us&i=d",
      "FetchInterval": "Daily"
    }
  }
}
